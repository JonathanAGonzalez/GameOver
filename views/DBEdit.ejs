<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head') %>
  <body>
    <div class="container-fluid">
      <!--HEADER-->
      <%- include('./partials/header') %> 
      <!--FIN HEADER-->

      <!--MAIN-->
      <div class="row ">
      <%- include('./partials/sideBar') %>

      <div class="card col-5 m-auto">
        <div class="card-body">
          <h2 class="col-12">EDITAR PRODUCTO</h2>
          <form action="/products/editar/<%=juego.id%>" method="POST" enctype="multipart/form-data">
            <div>
                <label for="">Nombre</label>
                <input type="text" name="name" value="<%=juego.name%>">
            </div>
            <div>
                <label for="">Descripci√≥n</label>
                <input type="text" name="description" value="<%=juego.description%>">
            </div>
            <div>
                <label for="">Link a video</label>
                <input type="text" name="video" value="<%=juego.video%>">
            </div>
            <div>
                <label for="">Descuento</label>
                <input type="text" name="discount" value="<%=juego.discount%>">
            </div>
            <div>
                <label for="image">Imagen de portada:</label>
                <input class="form-control" type="file" name="image">
            </div>
            <div>
                <label for="">Logo</label>
                <input type="text" name="logo" value="<%=juego.logo%>">
            </div>
            <div>
                <label for="">Precio</label>
                <input type="text" name="price" value="<%=juego.price%>">
            </div>
            <div>
                <label for="">Fecha de estreno</label>
                <input type="date" name="release_date">
            </div>
            <div>
                <label for="">Clasificacion de edad</label>
                <input type="text" name="age_clasification" value="<%=juego.age_clasification%>">
            </div>
            <div>
                <label for="">Categoria</label>
                <select name="category_id">
                    <% for (let i = 0; i < categoria.length; i++){ %>
                        <% if (categoria[i].id == juego.category_id) { %>
                        <option value="<%=categoria[i].id%>" selected>
                            <%=categoria[i].name%>
                        </option>
                    <% } else { %>
                        <option value="<%=categoria[i].id%>">
                            <%=categoria[i].name%> 
                        </option>
                        <% } %>
                    <% } %>    
                </select>
            </div>
            <div>
                <label for="">Distribuidor</label>
                <select name="distributor_id">
                    <% for (let i = 0; i < distribuidor.length; i++){ %>
                        <% if (distribuidor[i].id == juego.distributor_id) { %>
                        <option value="<%=distribuidor[i].id%>" selected>
                            <%=distribuidor[i].name%>
                        </option>
                    <% } else { %>
                        <option value="<%=distribuidor[i].id%>">
                            <%=distribuidor[i].name%> 
                        </option>
                        <% } %>
                    <% } %>    
                </select>
            </div>
            <div>
                <label for="">Seccion</label>
                <select name="section_id">
                    <% for (let i = 0; i < seccion.length; i++){ %>
                        <% if (seccion[i].id == juego.section_id) { %>
                        <option value="<%=seccion[i].id%>" selected>
                            <%=seccion[i].name%>
                        </option>
                    <% } else { %>
                        <option value="<%=seccion[i].id%>">
                            <%=seccion[i].name%> 
                        </option>
                        <% } %>
                    <% } %>    
                </select>
            </div>
           
            <button type="submit">Editar</button>
        </form>
        </div>
      </div>
    </div>
    <!--FIN MAIN-->

    <!--FOOTER-->
      <%- include('./partials/footer') %>
    </div>
    <!--SCRIPT-->

    <!--Optional JavaScript-->
    <!--jQuery first, then Popper.js, then Bootstrap JS-->
    <%- include('./partials/scripts') %> 
  </body>
</html>