<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head') %>
  <body>
    <div class="container-fluid">
      <!--HEADER-->
      <%- include('./partials/header') %> 
      <!--FIN HEADER-->

      <!--MAIN-->
      <div class="row ">
      <%- include('./partials/sideBar') %>

      <div class="products col-10">
        <h1>Listado de usuarios</h1>
        <table class="table table-striped table-dark mt-4">
          <thead>
            <!--TITULO-->
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Nombre</th>
              <th scope="col">Apellido</th>
              <th scope="col">Email</th>
              <th scope="col">Estado</th>
              <th scope="col">Administrador</th>
              <th scope="col">Editar</th>
            </tr>
          </thead>
    
          <% users.forEach(user => { %>
          <tbody>
            <tr>
              <th scope="row"><%= user.id %> </th>
              <td><%= user.first_name %> </td>
              <td><%= user.last_name %> </td>
              <td><%= user.email %> </td>
              <td>
                  <% if (user.state == "Active") { %>
                <strong style="color:green"><%= user.state %></strong>
                <% } else{%>
                    <strong style="color:red"><%= user.state %></strong>
                    <%}%>
                   </td>
                   <td><% if (user.admin == true) { %>
                    <strong style="color:green"><%= user.admin %></strong>
                   <% } else{%>
                    <strong style="color:red"><%= user.admin %></strong>
                    <%}%>
                </td>
              <td>
                <form action="/admin/detailPerfilEdit/<%= user.id %>" method="get">
                    <button class="btn btn-info" type="submit">EDITAR</button>
                </form>
              </td>
            </tr>
          </tbody>
          <% }) %>
    
    
        </table>
      </div>
    </div>
    <!--FIN MAIN-->

    <!--FOOTER-->
      <%- include('./partials/footer') %>
    </div>
    <!--SCRIPT-->

    <!--Optional JavaScript-->
    <!--jQuery first, then Popper.js, then Bootstrap JS-->
    <%- include('./partials/scripts') %> 
  </body>
</html>