<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head') %>
  <body>
    <div class="container-fluid">
      <!--HEADER-->
      <%- include('./partials/header') %> 
      <!--FIN HEADER-->

      <!--MAIN-->
      <div class="row ">
      <%- include('./partials/sideBar') %>

      <div class="products col-10">
        <h1>Listado de juegos</h1>
        <table class="table table-striped table-dark mt-4">
          <thead>
            <!--TITULO-->
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Titulo</th>
              <th scope="col">Seccion </th>
              <th scope="col">Precio</th>
              <th scope="col">Descuento</th>
              <th scope="col">Estado</th>
              <th scope="col">Editar</th>
            </tr>
          </thead>
          
          <% games.forEach(games => { %>
            <form action="/products/borrar/<%= games.id %>" method="post">
          <tbody>
            <tr>
              <th scope="row"><%= games.id %> </th>
              <td><%= games.name %> </td>
              <td><% section.forEach(sectionGames => { %>
                <% if (games.section_id == sectionGames.id) { %>
                  <%= sectionGames.name %> 
                <% } %>
              <% }) %></td>
              <td><%= games.price %> </td>
              <td><%= games.discount %> </td>
              <td>
                <select name="state">
                  <option  value="Inactive" <% if (games.state == "Inactive"){%>selected = "selected"<% } %> >Inactive</option>
                    <option value="Active" <% if (games.state == "Active"){%>selected = "selected"<% } %> >Active</option>
                  </select> </td>
                  <td>
                
                    <button class="btn btn-success" type="submit">CONFIRMAR</button>
                </form>
              </td>
            </tr>
          </tbody>
          <% }) %>
    
    
        </table>
      </div>
    </div>
    <!--FIN MAIN-->

    <!--FOOTER-->
      <%- include('./partials/footer') %>
    </div>
    <!--SCRIPT-->

    <!--Optional JavaScript-->
    <!--jQuery first, then Popper.js, then Bootstrap JS-->
    <%- include('./partials/scripts') %> 
  </body>
</html>