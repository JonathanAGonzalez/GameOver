<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head') %>
  <body>
    <div class="container-fluid">
      <!--HEADER-->
      <%- include('./partials/header') %> 
      <!--FIN HEADER-->

      <!--MAIN-->
      <div class="row ">
      <%- include('./partials/sideBar') %>
      
      <div class="card col-5 m-auto">
        <div class="front">
          <ul></ul>
        </div>
        <div class="card-body">
          <h2 class="col-12">AGREGAR PRODUCTO</h2>
          <form action="/products/crear" method="POST" enctype="multipart/form-data" id="validatorProduct">
            <div class="form-group">
              <label for="name">Nombre de producto</label>
              <input
                name="name"
                type="name"
                class="form-control"
                id="name"
                placeholder="Producto"
              />
            </div>

            <div class="form-group">
              <label for="name">Descripción</label>
              <input
                name="description"
                type="name"
                class="form-control"
                id="description"
                placeholder="Descripción"
              />
            </div>

            <div class="form-group">
              <label for="name">Link a video</label>
              <input
                name="video"
                type="name"
                class="form-control"
                id="video"
                placeholder="Link a video"
              />
            </div>

            <div class="form-group">
              <label for="name">Descuento</label>
              <input
                name="discount"
                type="name"
                class="form-control"
                id="discount"
                placeholder="Descuento"
              />
            </div>

            <div class="form-group">
              <label for="release_date">Fecha de lanzamiento</label>
              <input
                name="release_date"
                type="date"
                class="form-control"
                id="release_date"
                placeholder="Fecha de lanzamiento"
              />
            </div>

            <div class="form-group">
              <label for="number">Clasificacion de edad</label>
              <input
                name="age_clasification"
                type="number"
                class="form-control"
                id="age_clasification"
                placeholder="Edad"
              />
            </div>

            <div class="form-group">
              <label for="number">Precio</label>
              <input
                name="price"
                type="number"
                class="form-control"
                id="price"
                placeholder="Precio"
              />
            </div>

            <div class="form-group">
              <label for="name">Categoria</label>
              <select name="category_id" id="category_id">
                <% for (let i = 0; i < categorias.length; i++){ %>
                <option value="<%=categorias[i].id%>">
                  <%=categorias[i].name%>
                </option>
                <% } %>
              </select>
              <!--<input name="category_id" type="name" class="form-control" id="category_id" placeholder="Categoria">-->
            </div>

            <div class="form-group">
              <label for="name">Distribuidor</label>
              <select name="distributor_id" id="distributor_id">
                <% for (let i = 0; i < distribuidores.length; i++){ %>
                <option value="<%=distribuidores[i].id%>">
                  <%=distribuidores[i].name%>
                </option>
                <% } %>
              </select>
              <!--<input name="distributor_id" type="name" class="form-control" id="distributor_id" placeholder="Distribuidor">-->
            </div>

            <div class="form-check form-check-inline">
              <label for="platform">Consola/Plataforma de juego</label>
              <input
                class="platform"
                type="checkbox"
                name="platform"
                id="inlineCheckbox1"
                value="PS4"
              />
              <label class="form-check-label" for="inlineCheckbox1">PS4</label>
            </div>
            <div class="form-check form-check-inline">
              <input
                class="platform"
                type="checkbox"
                name="platform"
                id="inlineCheckbox2"
                value="XBOX"
              />
              <label class="form-check-label" for="inlineCheckbox2">XBOX</label>
            </div>
            <div class="form-check form-check-inline">
              <input
                class="platform"
                type="checkbox"
                name="platform"
                id="inlineCheckbox3"
                value="PC"
              />
              <label class="form-check-label" for="inlineCheckbox3">PC</label>
            </div>
            <div class="form-check form-check-inline">
              <input
                class="platform"
                type="checkbox"
                name="platform"
                id="inlineCheckbox2"
                value="Nintendo Switch"
              />
              <label class="form-check-label" for="inlineCheckbox4"
                >Nintendo Switch</label
              >
            </div>
            
            <div class="form-group">
              <label for="name">Seccion</label>
              <select name="section_id" id="">
                <% for (let i = 0; i < secciones.length; i++){ %>
                <option value="<%=secciones[i].id%>">
                  <%=secciones[i].name%>
                </option>
                <% } %>
              </select>
              <!--<input name="section_id" type="name" class="form-control" id="section_id" placeholder="Seccion">-->
            </div>

            <label for="image">Imagen de portada:</label>
            <input type="file" name="image" id="image">

            <button type="submit" class="mt-4">Enviar</button>
          </form>
        </div>
      </div>
    </div>
    <!--FIN MAIN-->

    <!--FOOTER-->
      <%- include('./partials/footer') %>
    </div>
    <!--SCRIPT-->

    <!--Optional JavaScript-->
    <!--jQuery first, then Popper.js, then Bootstrap JS-->
    <%- include('./partials/scripts') %> 
  </body>
</html>
