<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head') %>
  <body>
    <div class="container-fluid">
      <!--HEADER-->
      <%- include('./partials/header') %> 
      <!--FIN HEADER-->

      <!--MAIN-->
      <div class="row ">
      <%- include('./partials/sideBar') %>
        
      <div class="card col-5 m-auto">
        <div class="card-body">
          <h2 class="col-12">EDITAR USUARIO</h2>
          <form action="/admin/detailPerfilEdit/<%= userToEdit.id %>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">Nombre</label>
              <input
                name="first_name"
                type="text"
                class="form-control"
                id="name"
                value="<%= userToEdit.first_name %> "
              />
            </div>

            <div class="form-group">
              <label for="name">Apellido</label>
              <input
                name="last_name"
                type="text"
                class="form-control"
                id="description"
                value="<%= userToEdit.last_name %> "
              />
            </div>

            <div class="form-group">
              <label for="name">Contrase√±a</label>
              <input
                name="password"
                type="password"
                class="form-control"
                id="password"
                value="<%= userToEdit.password %> "
              />
            </div>

            <div class="form-group">
                <label for="name">Estado : "Active" || "Inactive"</label>
                <select name="state" id="state">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
              </div>

            <div class="form-group">
                <label for="name">Avatar</label>
                <img  class="img-fluid"src="/images/img-perfil/<%=userToEdit.avatar %> " alt="IMAGEN">
              <input
                name="avatar"
                type="file"
                class="form-control"
                id="file"
              />
            </div>

            <div class="form-group">
              <label for="release_date">Administrador</label>
              <div class="btn-group" data-toggle="buttons">
                  <label class="btn btn-primary active">Si
                      <input type="checkbox" name="admin" value=1>
                  </label>
                  <label class="btn btn-primary">No
                      <input type="checkbox" name="admin" value=0>
                  </label>
              </div>
            </div>

            

            <button type="submit" class="mt-4">Enviar</button>
          </form>
        </div>
      </div>
      
    </div>
    <!--FIN MAIN-->

    <!--FOOTER-->
      <%- include('./partials/footer') %>
    </div>
    <!--SCRIPT-->

    <!--Optional JavaScript-->
    <!--jQuery first, then Popper.js, then Bootstrap JS-->
    <%- include('./partials/scripts') %> 
  </body>
</html>