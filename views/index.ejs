<!DOCTYPE html>
<html lang="es">
<!-- HEAD HTML-->
<%- include('./partials/head') %> 

<body>
    <div class="container-fluid">
      <!-- HEADER -->
      <%- include('./partials/header') %>
        <!-- MENU DE ESCRITORIO -->
        <%- include('./partials/navbar')%> 
        <!-- CARROUSEL -->
        <div class="carrousel row">
            <div id="carouselExampleControls" class="carousel slide col-12" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="d-block w-100 img-fluid" src="/images/slide/1.jpg" alt="First slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100 img-fluid" src="/images/slide/2.jpg" alt="Second slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100 img-fluid" src="/images/slide/3.jpg" alt="Third slide">
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
        </div>
        <!-- PRODUCT CARDS -->
        <section class="row justify-content-around">
          <!-- TITTLE PRODUCT -->
          <div class="titulo-product col-12">
          
            <h5 class="estilo-fuente-1">üéÆJUEGOS  <mark class="estilo-fuente-2">RECOMENDADOS</mark></h5>
            
          </div>
          
          <!--CAJA RECOMENDADOS-->

          <% for( let i = 0; i < recomendados.length; i++ ) { %>
            <div class="card col-dm-3 mb-3 text-center" style="width: 18rem;">
              <img class="card-img-top" src="/images/product-games/<%= recomendados[i].image %>  " alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= recomendados[i].name %></h5>
                    <strong class="precio">$<%= recomendados[i].price %></strong>  
              </div>
              <button onclick="clickear(<%= recomendados[i].id %>)" class="btn btn-primary ">Comprar</a>
            </div>
            <% } %> 
          <!--CAJA RECOMENDADOS FINAL-->
          
          <!-- TOP VENTAS -->
          <div class="row justify-content-around" id="top-venta">
            <!-- TITTLE PRODUCT -->
            <div class="titulo-product col-12">
              <h5 class="estilo-fuente-1">ü•áTOP  <mark class="estilo-fuente-2">MAS COMPRADOS</mark></h5>
              <hr>
            </div>
            <!--CAJA 1-->
            <div class="contenedorcard col-12">
            <% vendidos.forEach(masComprados => { %>

                <div class="card text-center col-5 col-dm-3 col-lg-2 mb-3 mr-3" style="width: 18rem;">
                  <img class="card-img-top" src="/images/product-games/<%= masComprados.image  %>   " alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title"><%= masComprados.name %> </h5>
                  
                  
                  
                    <strong class="precio">$<%= masComprados.price %> </strong>
                    
                  </div>
                  <button onclick="clickear(<%= masComprados.id %>)" class="btn btn-primary">Comprar</a>
                </div>
                <% }) %>
              </div>
            </div>
          <!--OFERTAS-->
          <div class="titulo-product col-12">
            <h5 class="estilo-fuente-1">üè¥‚Äç‚ò†Ô∏èOFERTAS <mark class="estilo-fuente-2">SEMANALES</mark></h5>
          </div>
          <!--CAJA 1-->
          <% ofertas.forEach(oferta => { %>
            <div class="card text-center col-dm-3 mb-3" style="width: 18rem;">
              <img class="card-img-top" src="/images/product-games/<%= oferta.image %>  " alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= oferta.name %></h5>
                            
                 
                    <strong class="precio">$<%= oferta.price %></strong>
                <button onclick="clickear(<%= oferta.id %>)" class="btn btn-primary">Comprar</a>
              </div>
            </div>
          <% }) %>
        </section>
        <%- include('./partials/footer') %> 
      </div>
      <div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Atenci√≥n!</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <p>Logueate para continuar comprando</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <a href="/user/login" class="btn btn-success">Logueate</a>
            </div>
          </div>
        </div>
      </div>
      
     
    <script src="/javascript/app.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script>
      function clickear(element){
        if(userLoggedFront){
          window.location.href = "/cart/add/" + element;
        }else{
          //alert("Registrate para seguir comprando")
          $('#cartModal').modal('show')
        }
        console.log(element)
        console.log(userLoggedFront)
      }
    </script>
</body>

</html>